{
  "db_name": "ZAME", 
  "db_file": "data/ZAME.db", 
  "version": 2, 
  "maps": { 
    ".+/data.json": { 
      "to_table": [ 
        {
          "node": "map",
          "table": "map",
          "key_col": "id"
        },
        {
          "node": "map_vote", 
          "table": "map_vote", 
          "key_col": "map_id",
          "val_col": "vote"
        }
      ]
    },
    ".+/content.json": {
      "to_keyvalue": ["cert_user_id"]
    }
  },
  "tables": { 
    "map": { 
      "cols": [ 
        ["id", "TEXT"],
        ["description", "TEXT"],
        ["thumbnail_path", "TEXT"],
        ["image_path", "TEXT"],
        ["filepath", "TEXT"],
        ["version", "TEXT"],
        ["added", "DATETIME"],
        ["json_id", "INTEGER REFERENCES json (json_id)"]
      ],
      "indexes": ["CREATE UNIQUE INDEX map_key ON map(id, json_id)", "CREATE UNIQUE INDEX map_added ON map(added)"],
      "schema_changed": 2
    },
    "map_vote": { 
      "cols": [ 
        ["map_id", "INTEGER"],
        ["vote", "INTEGER"],
        ["json_id", "INTEGER REFERENCES json (json_id)"]
      ],
      "indexes": ["CREATE UNIQUE INDEX map_vote_key ON map_vote(map_id, json_id)", "CREATE UNIQUE INDEX vote_map_id ON map_vote(map_id)"],
      "schema_changed": 1
    },
    "json": {  
        "cols": [
            ["json_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
            ["directory", "TEXT"],
            ["file_name", "TEXT"],
            ["cert_auth_type", "TEXT"],
            ["cert_user_id", "TEXT"]
        ],
        "indexes": ["CREATE UNIQUE INDEX path ON json(directory, file_name)"],
        "schema_changed": 1
    }
  }
}
